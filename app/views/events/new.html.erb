<div class='container'>
  <form>
    <%= simple_form_for(@event, html: { class: 'form-inline' }) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      
      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :date_start %>
        <%= f.input :date_end %>
        <%= f.input :date %>
        <%= f.association :company, collection: Company.order(:name), prompt: 'Choose a Company' %>
        <%= f.association :space, collection: Space.order(:name), prompt:'Choose a Space' %>
        <%= f.input :description %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, class:"btn btn-primary"%>
      </div>
    <% end %>
  </form>
</div>
