<div class='container'>
  <%= simple_form_for(@event) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :date_start %>
      <%= f.input :date_end %>
      <%= f.input :date %>
      <%= f.association :company, collection: Company.order(:name), prompt: 'Choose a Company' %>
      <%= f.association :space, collection: Space.order(:name), prompt:'Choose a Space' %>
      <%= f.input :description %>
    </div>

    <div class="input-group mb-3">
      <div class="custom-file">
        <%= f.file_field :images, multiple: true, class:'custom-file-input'%>
        <%= f.label :images, class:'custom-file-label' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class:"btn btn-primary"%>
    </div>
  <% end %>
</div>
