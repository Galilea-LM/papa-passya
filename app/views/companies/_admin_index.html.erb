<div class='container custom-container'>
  <h1>Companies</h1>
  <div class='table-responsive'>
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Address</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @companies.each do |company| %>
          <tr>
            <th scope="row"><%=company.id%></th>
            <td><%=link_to company.name, company_path(company) %></td>
            <td><%=company.address%></td>
            <td>
              <%= link_to 'Show' , company_path(company), class: 'button is-rounded is-link is-outlined' unless current_user.role == 'admin'%>
              <%= link_to 'Edit' , edit_company_path(company), class: 'button is-rounded is-link is-outlined' if current_user.role == 'admin'%>
              <%= link_to 'Delete', company_path(company), method: :delete, class: 'button is-rounded is-outlined is-danger' if current_user.role == 'admin'%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to 'Add company', new_company_path %>
</div>
